<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        android:text="15: 33: 20/03/2016"
        android:textColor="@color/blackText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/txtPair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GBPUSD"
        android:layout_marginLeft="10dp"
        android:textColor="@color/blackText"
        app:layout_constraintTop_toTopOf="@+id/txtTime"
        app:layout_constraintBottom_toBottomOf="@+id/txtTime"
        app:layout_constraintLeft_toRightOf="@+id/txtTime"/>

    <TextView
        android:id="@+id/txtAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="CALL"
        android:textColor="@color/blackText"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/txtPair"
        app:layout_constraintTop_toTopOf="@+id/txtTime"
        app:layout_constraintBottom_toBottomOf="@+id/txtTime"/>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ITM"
        android:textStyle="bold"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/txtTime"
        app:layout_constraintBottom_toBottomOf="@+id/txtTime"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>